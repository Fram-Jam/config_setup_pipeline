{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(python*)",
      "Bash(pip*)",
      "Bash(pytest*)",
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(mkdir*)",
      "Bash(source*)",
      "Glob",
      "Grep",
      "Task"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo*)",
      "Bash(git push*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git push*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'â›” BLOCKED: git push requires passing code review first. Run /review and /multi-review before pushing.'"
          }
        ]
      }
    ]
  }
}
